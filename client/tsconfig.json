{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "module": "commonjs"
  },
  "compileOnSave": false,
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/spec/**",
    "!typings/**",
    "!node_modules/**",
    "!dist"
  ],
  "exclude": [
    "dist",
    "typings",
    "node_modules"
  ]
}
